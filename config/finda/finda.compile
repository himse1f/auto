#!/bin/bash    

cd src 
make -f makefile.unix USE_UPNP=-
cp Lindad ${MNODE_DAEMON}
apt-get -qqy install unzip
mkdir -p /var/lib/masternodes/(${CODENAME}${NUM})/temp
wget -O /var/lib/masternodes/(${CODENAME}${NUM})/temp/linda.zip https://www.dropbox.com/s/90d3qxu72syb5et/bootstrap_latest.zip?dl=0
cd /var/lib/masternodes/(${CODENAME}${NUM})/temp/
unzip linda.zip
rm linda.zip 2> /dev/null
rm Linda.conf 2> /dev/null
cp -TRv /var/lib/masternodes/(${CODENAME}${NUM})/temp/ /var/lib/masternodes/${CODENAME}${NUM}/ 2>/dev/null
cd /var/lib/masternodes/(${CODENAME}${NUM})/
rm -R /var/lib/masternodes/(${CODENAME}${NUM})/temp
chown masternode:masternode /var/lib/masternodes/(${CODENAME}${NUM})/